<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.25.xsd">

    <!-- Include conditional changelogs -->
    <include file="../master/db.changelog-master-schema.xml" relativeToChangelogFile="true">
        <conditions>
            <condition type="bean" bean="databaseInitializationConfig" property="shouldRunCreateTables"/>
        </conditions>
    </include>

    <include file="../master/db.changelog-master-data.xml" relativeToChangelogFile="true">
        <conditions>
            <condition type="bean" bean="databaseInitializationConfig" property="shouldRunInsertData"/>
        </conditions>
    </include>

    <!-- Core schema changes -->
    <include file="../core/db.changelog-core-schema.xml" relativeToChangelogFile="true">
        <conditions>
            <condition type="bean" bean="databaseInitializationConfig" property="shouldRunCreateTables"/>
        </conditions>
    </include>

    <!-- Core data changes -->
    <include file="../core/db.changelog-core-data.xml" relativeToChangelogFile="true">
        <conditions>
            <condition type="bean" bean="databaseInitializationConfig" property="shouldRunInsertData"/>
        </conditions>
    </include>

</databaseChangeLog> 