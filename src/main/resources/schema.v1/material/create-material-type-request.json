{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "MaterialTypeRequest",
  "description": "Material Type Request DTO",
  "type": "object",
  "properties": {
    "materialTypeName": {
      "type": "string",
      "minLength": 1,
      "description": "Name of the material type",
      "example": "Raw Material"
    },
    "materialTypeDesc": {
      "type": "string",
      "maxLength": 255,
      "description": "Description of the material type",
      "example": "Unprocessed materials"
    }
  },
  "required": ["materialTypeName"],
  "additionalProperties": false
}
