{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "MaterialRequest",
  "description": "Material Request DTO",
  "properties": {
    "materialName": {
      "type": ["string", "null"],
      "description": "Name of the material",
      "example": "Cement",
      "maxLength": 100
    },
    "materialManufacturerId": {
      "type": ["integer","null"],
      "description": "ID of the material manufacturer",
      "example": 1
    },
    "materialVendorId": {
      "type": ["integer","null"],
      "description": "ID of the material vendor",
      "example": 1
    },
    "materialTypeId": {
      "type": ["integer","null"],
      "description": "ID of the material type",
      "example": 1
    },
    "materialUOM": {
      "type": ["integer", "null"],
      "description": "Unit of measurement for the material",
      "example": "1"
    },
    "materialPackSize": {
      "type": ["number","null"],
      "description": "Size of the material package",
      "example": 50.0,
      "minimum": 0
    },
    "materialRatePerPack": {
      "type": ["number","null"],
      "description": "Rate per pack of the material",
      "example": 350.0
    }
  }
}
