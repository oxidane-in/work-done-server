{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "LineItemHeaderRequest",
  "type": "object",
  "properties": {
    "lineItemHeaderName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "Line item header name is required"
    },
    "lineItemHeaderDesc": {
      "type": ["string", "null"],
      "maxLength": 255,
      "description": "Optional description of the line item header"
    }
  },
  "required": ["lineItemHeaderName"],
  "additionalProperties": false
}
