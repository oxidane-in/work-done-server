{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "Project Scope Request Schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "projectScopeName": {
      "type": ["string","null"],
      "minLength": 1,
      "description": "Name of the project scope",
      "example": "Commercial Building"
    },
    "projectScopeDesc": {
      "type": ["string", "null"],
      "description": "Description of the project scope",
      "example": "Scope for commercial building projects"
    }
  }
}
